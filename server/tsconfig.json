{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "lib": [
            "es2022",
            "DOM"
        ],
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": [
            "node"
        ],
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "client",
        "node_modules",
        "dist"
    ],
    "assets": [
        "**/*.graphql"
    ]
}